<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="auto">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShiftScheduler"
        tools:targetApi="31">
        <activity
            android:name=".EditEmployee"
            android:exported="false" />
        <activity
            android:name=".Manager.SetSchedule"
            android:exported="false" />
        <activity
            android:name=".Manager.ViewSchedules"
            android:exported="false" />
        <activity
            android:name=".Manager.ViewEmployees"
            android:exported="false" />
        <activity
            android:name=".AddEmployee"
            android:exported="false" />
        <activity
            android:name=".Manager.ManagerDashboard"
            android:exported="false"
            android:label="@string/title_activity_manager_dashboard" />
        <activity
            android:name=".Register"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>